---
import HeaderLink from './HeaderLink.astro';

let { headerText } = Astro.props;
---

<header>
  <nav class="border-b border-gray-200 bg-white">
    <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
      <div class="flex h-16 justify-between">
        <div class="flex">
          <div class="flex shrink-0 items-center rounded-lg">
            <a href={import.meta.env.BASE_URL}>
              <img
                class="block h-8 w-auto rounded-full object-cover"
                src={`${import.meta.env.BASE_URL}images/linna-logo.jpg`}
                alt="Oulu Dev Meetups logo"
              />
            </a>
          </div>
          <div class="hidden sm:-my-px sm:ml-6 sm:flex sm:space-x-8">
            <HeaderLink
              href={import.meta.env.BASE_URL}
              linkDescription="Home"
            />
            <HeaderLink
              href={`${import.meta.env.BASE_URL}meetups`}
              linkDescription="Meetups"
            />
            <HeaderLink
              href={`${import.meta.env.BASE_URL}submit`}
              linkDescription="Submit your own"
            />
          </div>
        </div>
        <div class="-mr-2 flex items-center sm:hidden">
          <!-- Mobile menu button -->
          <button
            type="button"
            class="inline-flex items-center justify-center rounded-md bg-white p-2 text-gray-400 hover:bg-gray-100 hover:text-gray-500 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:ring-offset-2"
            aria-controls="mobile-menu"
            aria-expanded="false"
            id="mobile-menu-button"
            onclick="document.querySelector('#mobile-menu').classList.toggle('hidden')"
          >
            <span class="sr-only">Open main menu</span>
            <!-- Menu open: "hidden", Menu closed: "block" -->
            <svg
              class="block h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M3.75 6.75h16.5M3.75 12h16.5m-16.5 5.25h16.5"
              >
              </path>
            </svg>
            <!-- Menu open: "block", Menu closed: "hidden" -->
            <svg
              class="hidden h-6 w-6"
              fill="none"
              viewBox="0 0 24 24"
              stroke-width="1.5"
              stroke="currentColor"
              aria-hidden="true"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                d="M6 18L18 6M6 6l12 12"
              >
              </path>
            </svg>
          </button>
        </div>
      </div>
    </div>
    <!-- Mobile menu, show/hide based on menu state. -->

    <div class="sm:hidden">
      <div class="hidden" id="mobile-menu">
        <div class="space-y-1 pb-3 pt-2">
          <HeaderLink
            href={import.meta.env.BASE_URL}
            linkDescription="Home"
            isMobile="true"
          />
          <HeaderLink
            href={`${import.meta.env.BASE_URL}meetups`}
            linkDescription="Meetups"
            isMobile="true"
          />
          <HeaderLink
            href={`${import.meta.env.BASE_URL}submit`}
            linkDescription="Submit your own"
            isMobile="true"
          />
        </div>
      </div>
    </div>
  </nav>

  <div class="mx-auto my-4 max-w-7xl px-4 text-center">
    <h1
      class="text-4xl font-bold tracking-tight text-zinc-800 sm:text-5xl dark:text-zinc-100"
    >
      {headerText}
    </h1>
  </div>
</header>
